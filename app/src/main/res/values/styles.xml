<resources>
    <style name="grid_letter">
        <item name="android:textSize">35sp</item>
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/purple_200</item>
        <item name="android:onClick">selectLetter</item>
        <item name="android:text">b</item>
    </style>

    <style name="selected_grid_letter" parent="grid_letter">
        <item name="android:backgroundTint">@color/purple_500</item>
    </style>

    <style name="created_word">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="text_display" parent="created_word">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="control_button">
        <item name="android:layout_width">125dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/purple_700</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>